<div class="ConversationCard-container">
    <div class="ConversationCard">
        <div class="ConversationTags">
            <i class="fa fa-tags"></i>
              {% if tags %}
                {% for tag in tags %}
                  {{ tag }}
                {% endfor %}
              {% else %}
                {{ _('Conversation') }}
              {% endif %}
        </div>
        <div class="ConversationCard-actions">
            <ul class="ConversationCard-statistics">
                <li><i class="fa fa-comment"></i> {{ n_comments }}</li>
                <li><i class="fa fa-sliders-h"></i> {{ n_votes }}</li>
                <li><i class="fa fa-star"></i> {{ n_followers }}</li>
            </ul>
        </div>
        <div class="ConversationCard-cover">
            <h1 up-expand><a href="{{ url }}">{{ conversation.text }}</a></h1>
            {{conversation|role('progress-bar')}}
        </div>
        <div class="ConversationCard-actions">{{ action_button(_('Participate now!'), url) }}</div>
    </div>
    {% if user_can_moderate %}
        <a class="ConversationCard-moderation" href="{{ url }}moderate/">
            <i class="fas fa-cog"></i> {{ _('Moderate Conversation') }}
        </a>
    {% endif %}
</div>
